# C(AI)DENCE Backend Environment Template
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=sqlite+aiosqlite:///./sql_app.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cadence_ai

# Security
SECRET_KEY=change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# LLM Provider Configuration
# Supported: ollama, openai, anthropic, gemini
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5:0.5b
OLLAMA_BASE_URL=http://localhost:11434

# Cloud LLM API Keys (uncomment and fill as needed)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...

# Frontend & OAuth URLs
FRONTEND_URL=http://localhost:3000
BACKEND_PUBLIC_URL=http://localhost:8080
# Optional override. If omitted, backend derives:
# ${BACKEND_PUBLIC_URL}/api/v1/social/callback
OAUTH_REDIRECT_BASE=

# OAuth: Instagram (via Facebook/Meta)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# OAuth: Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# OAuth: Google (YouTube)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth: LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# OAuth: Snapchat
SNAPCHAT_CLIENT_ID=
SNAPCHAT_CLIENT_SECRET=

# OAuth: WhatsApp (via Meta Business)
WHATSAPP_APP_ID=
WHATSAPP_APP_SECRET=

# Communications (CPaaS) - Integrations
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=+1234567890

# SENDGRID_API_KEY=your_sendgrid_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Redis (Job Queue)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Creator Discovery
# MODASH_API_KEY=
# INFLUENCERS_CLUB_API_KEY=
